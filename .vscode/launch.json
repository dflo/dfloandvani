{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Angular",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "ng serve",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}"
          },
        {
            "name": "Attach Chrome",
            "type": "chrome",
            "request": "attach",
            "url": "http://localhost:4200/",
            "port": 4200,
            "webRoot": "${workspaceFolder}"
        },
    ]
}